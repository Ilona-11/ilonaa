<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layar"
    android:padding="24dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="KARTU UCAPAN"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nama"
            android:background="@color/teal_700"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textColorHint="@android:color/white"/>

        <Button
            android:id="@+id/btnUcapan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Ucapan"
            android:textColor="@color/white"
            android:backgroundTint="@color/teal_700"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />


        <Button
            android:id="@+id/buttonTampilkan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tampilkan Ucapan"
            android:layout_marginBottom="16dp"
            android:background="@color/teal_700"/>

        <TextView
            android:id="@+id/textUcapan"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bagikan Ucapan"
            android:textColor="@color/white"
            android:background="@color/teal_700"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>
